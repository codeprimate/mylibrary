<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title>My Library - 
      <%=h (@page_title ||
          (params[:action] + ' ' + params[:controller].singularize).capitalize) %>
    </title>

    <%= stylesheet_link_tag 'application' %>
<%#= javascript_include_tag :defaults %>
  </head>

  <body>
    <div id="body">
      <div id="header">
        
        <div id="logo">
          <h1>My Library</h1>
        </div>

        <div id="header_links">
          <%= link_to("Books", books_path) %>
          <% if current_user %>
            | <%= link_to "Edit profile", edit_user_path(:current) %> |
            <%= link_to "Logout", logout_path %>
          <% else %>
            <%= link_to "Log in", login_path %>
          <% end %>
        </div>
        <div class="clear"></div>
      </div>

      <div id="subheader">
        <%= render :partial => "nav" %>
      </div>

      <div id="main">
        <%= yield %>
      </div>


      <div id="footer">

      </div>

    </div>
  </body>


</html>