<div class="book_details">
  <h1><%=h @book.title %></h1>
  <div class="book_preview">
    <%= link_to(image_tag(@book.asset.url(:medium), :border => 0), @book.asset.url) %><br/>
    [<%= link_to("download", @book.asset.url) %>]
  </div>
  <div class="book_notes">
    <p>
      <%= simple_format(h @book.notes) %>
    </p>
    <p>
      <span class="tags">
        <b>Tags:</b>
        <%= tag_list_for(@book) %>
      </span>
    </p>
    <p>
      <span class="date"><b>Uploaded:</b> <%=h @book.created_at.to_s(:long) %></span>
    </p>
  </div>
  
  <div class="clear book_actions">
    <%= link_to("Edit", edit_book_path(@book)) %> |
    <%= link_to("Delete", book_path(@book), :method => :delete, :confirm => "Are you sure?") %>
  </div>
</div>


